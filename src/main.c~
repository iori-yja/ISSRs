void vrightwheelTask( void *pvParameters)
{
	int phase;
	FIO4DIR0 = 0x0F;
	FIO4CLR0 = 0x0F;
	while(1){
	if (0!=right){
	switch(phase){
		case 0:
		FIO4PIN0 = 0x03;
		phase++;
		break;
		case 1:
		FIO4PIN0 = 0x09;
		phase++;		
		break;
		case 2:
		FIO4PIN0 = 0x0C;
		phase++;
		break;
		case 3:
		FIO4PIN0 = 0x06;
		default:
		phase=0;
		break;
		}
	vTaskDelay( right / portTICK_RATE_MS );
	}
	else 	vTaskDelay( 10 / portTICK_RATE_MS );

}
}
//============================
void vleftwheelTask( void *pvPatameters){	
	int phase;
	FIO4DIR1 = 0x0F;
	FIO4CLR1 = 0x0F;
	while(1){
	if (0!=left){
	switch(phase){
		case 0:
		FIO4PIN1 = 0x03;
		phase++;		
		break;
		case 1:
		FIO4PIN1 = 0x09;
		phase++;
		break;
		case 2:
		FIO4PIN1 = 0x0C;
		phase++;
		break;
		case 3:
		FIO4PIN1 = 0x06;
		default:
		phase = 0;		
		break;
		}
		vTaskDelay( left / portTICK_RATE_MS);
		}else 		vTaskDelay( left / portTICK_RATE_MS);
	}
}
